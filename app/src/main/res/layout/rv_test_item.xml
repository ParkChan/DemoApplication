<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="sampleText"
            type="String" />

        <variable
            name="listener"
            type="com.example.demo.fragment.SecondRecyclerAdapter.OnItemSelectListener" />

        <variable
            name="viewHolderItemInfo"
            type="com.example.demo.dialog.ViewHolderItemInfo" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="@{() -> listener.select(sampleText)}">

        <TextView
            android:id="@+id/tv_test"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/test_bg"
            android:gravity="center"
            android:minHeight="100dp"
            android:paddingHorizontal="20dp"
            android:text="@{sampleText}"
            android:textColor="@color/test_text_color"
            app:layout_constraintBottom_toTopOf="@id/view_tab_bottom_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_tab_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/test_divide_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_test" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
