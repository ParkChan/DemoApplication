<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.theme.ThemeTestFragment">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/test_bg"
            android:text="setValue"
            android:textColor="@color/test_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_post"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/test_bg"
            android:text="postValue"
            android:textColor="@color/test_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_set"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/test_bg"
            android:textColor="@color/test_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="0"
            app:layout_constraintTop_toBottomOf="@id/btn_set" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_observe_cnt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/test_bg"
            android:textColor="@color/test_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="0"
            app:layout_constraintTop_toBottomOf="@id/tv_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>