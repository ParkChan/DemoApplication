    <!--        android:fillViewport="true">-->

    <!--        -->
    <!--    </ScrollView>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/test_bg"
            android:text="Light"
            android:textColor="@color/test_text_color"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/test_bg"
            android:text="Dark"
            android:textColor="@color/test_text_color"
            app:layout_constraintStart_toEndOf="@id/btn_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_script_call"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/test_bg"
            android:text="loadUrl 대신 evaluateJavascript 을 사용하여 \n리턴값 받기"
            android:textColor="@color/test_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_light" />

        <WebView
            android:id="@+id/wv_test"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_script_call" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

